{{!-- {{#if isAuthenticated}}<h4>Current User: {{user}}</h4>{{/if}} --}}

<div class="trip-details-header">
  <h2>
    <span class="trip-name" contenteditable>{{trip.name}}</span>
  </h2>
  <p class="subtle-text small-text">
    START DATE --- END DATE {{!-- {{trip.startDate}}{{trip.endDate}} --}}
  </p>
  <p class="subtle-text small-text">
    <span class="trip-location" contenteditable>{{trip.location}}</span>
  </p>
</div>
<div class="row">
  <div class="trip-details-body">
    <p class="small-text">
      <span class="trip-description" contenteditable>{{trip.description}}</span>
    </p>
    <h4>Participants</h4>
    {{!-- Display # of Participants --}}
    <ul class="participants-list">
      {{#each trip.invitations as |invitation|}}
        <li class="sm-circle user-icon">{{invitation.userInit}}</li>
      {{/each}}
    </ul>
    <button {{action "submit"}}>Submit Changes</button>
    <button {{action "deleteTrip"}} class="btn btn-danger">Delete Trip</button>

    <button {{action "joinTrip"}}>Join Trip</button>
  </div>
</div>
