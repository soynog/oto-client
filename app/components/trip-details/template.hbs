{{!-- {{#if isAuthenticated}}<h4>Current User: {{user}}</h4>{{/if}} --}}

{{trip-details.trip-header trip=trip}}

<div class="row">
  <div class="trip-details-body">
    <p class="small-text trip-description">
      <span class="trip-description" contenteditable>{{trip.description}}</span>
    </p>
    <h4 class="partipants-list-header">Participants</h4>
    {{!-- Display # of Participants --}}
    <ul class="participants-list">
      {{#each trip.invitations as |invitation|}}
        <li class="sm-circle user-icon">{{invitation.userInit}}</li>
      {{/each}}
    </ul>

    {{trip-link-share-button title=trip.name url=trip.url}}

    <div class="trip-cards-container">
      {{trip-card title="meals" description="coming soon!"}}
      {{trip-card title="rides" description="coming soon!"}}
      {{trip-card title="activities" description="coming soon!"}}
      {{trip-card title="gear list" description="coming soon!"}}
    </div>

    <div class="trip-action-button-container">
      <button class="highlight-button pill-button" {{action "joinTrip"}}>Join Trip</button>
      <button class="highlight-button pill-button" {{action "submit"}}>Submit Changes</button>
      <button class="danger-button pill-button" {{action "deleteTrip"}}>Delete Trip</button>
    </div>
  </div>
</div>
