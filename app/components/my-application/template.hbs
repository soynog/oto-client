  <div class="container-fluid">
    {{navbar-header}}

    <div class="collapse navbar-collapse" id="navigation">
      <ul class="nav navbar-nav">
        {{#if isAuthenticated}}
        <li>{{#link-to "users"}}Users{{/link-to}}</li>
        {{/if}}
        <li>{{#link-to 'trips'}}Trips{{/link-to}}</li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
