<div class="col-md-8 col-md-offset-2">
  {{outlet}}
</div>

{{#if isAuthenticated}}
  <button {{action "signOut"}}>Log Out</button>
{{else}}
  <button {{action "toggleModal"}}>Log In</button>
{{/if}}

{{#if isShowingModal}}
  {{#modal-dialog close="toggleModal"
                  targetAttachment="center"
                  translucentOverlay=true
                  clickOutsideToClose=true}}
    {{email-input email=credentials.email}}
    {{password-input password=credentials.password}}

    <button type="submit" class="btn btn-primary" {{action "submit"}}>
      Sign In
    </button>

    <button class="btn btn-default" {{action "toggleModal"}}>
      Cancel
    </button>
  {{/modal-dialog}}
{{/if}}

{{#each flashMessages.queue as |flash|}}
  {{flash-message flash=flash}}
{{/each}}
